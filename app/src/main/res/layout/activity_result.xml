<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".prediksi.result.ResultActivity">

    <ImageView
        android:id="@+id/img_stunting"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/logo_stuntguard"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/stunting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/black"
        android:text="STUNTING"
        android:textSize="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_stunting" />
    
    <TextView
        android:id="@+id/deskripsi_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anak Anda Terdeteksi Stunting"
        android:fontFamily="@font/roboto_bold"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stunting"/>

    <TextView
        android:id="@+id/deskripsi_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Segera periksa ke dokter untuk pemeriksaan lebih lanjut!"
        android:fontFamily="@font/roboto_regular"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/deskripsi_top"/>




</androidx.constraintlayout.widget.ConstraintLayout>